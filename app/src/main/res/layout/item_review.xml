<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/add_review_background"
    android:layout_margin="3dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       android:padding="5dp"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/circular_text_view"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginLeft="5dp"
           android:text="z"
           android:paddingBottom="5dp"
           android:textColor="@android:color/white"
           android:textSize="25sp"
           android:textAlignment="center"
           android:background="@drawable/circle"
           android:gravity="center_vertical" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/name_review"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:textSize="14sp"
               android:textStyle="bold"
               android:text="Imran Javed"/>

           <RatingBar
               android:id="@+id/rating"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="?android:attr/ratingBarStyleSmall"
               android:theme="@style/RatingBar"
               android:numStars="5"
               android:stepSize="1"
               android:isIndicator="true" />

           <TextView
               android:id="@+id/desc_review"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:textSize="12sp"
               android:text="Considering the increasing cases of Coronavirus, Supertasker has taken some preventive measures to ensure safety of everyone in the community because for us your safety is always a preference."
               android:layout_marginTop="5dp" />

       </LinearLayout>
   </LinearLayout>

</LinearLayout>